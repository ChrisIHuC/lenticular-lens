{
  "=": {
    "sql_template": "{source} = {target}",
    "index_using": "btree ({target})"
  },
  ">": {
    "sql_template": "{source} > {target}",
    "similarity": "{source} - {target}",
    "index_using": "btree ({target})"
  },
  "TRIGRAM_DISTANCE": {
    "sql_template": "{source} % {target}",
    "similarity": "similarity({source}, {target})",
    "before_index": "SELECT set_config('pg_trgm.similarity_threshold', {threshold}, true);",
    "index_using": "gin ({target} gin_trgm_ops)"
  },
  "DISTANCE_IS_BETWEEN": {
    "sql_template": "{source} IS NOT NULL AND {target} IS NOT NULL AND {source} - {target} BETWEEN {distance_start} AND {distance_end}",
    "similarity": "{source} - {target}"
  },
  "TIME_DELTA": {
    "sql_template": "{source} IS NOT NULL AND {target} IS NOT NULL AND {source} - {target} BETWEEN -({days} * {multiplier}) AND ({days} * {multiplier})",
    "similarity": "{source} - {target}"
  },
  "SAME_YEAR_MONTH": {
    "sql_template": "get_date_part({date_part}, {source}) = get_date_part({date_part}, {target})",
    "index_using": "btree (get_date_part({date_part}, {target}))"
  },
  "LEVENSHTEIN": {
    "sql_template": "levenshtein_distance({source}, {target}, {max_distance}) <= {max_distance}",
    "similarity": "similarity({source}, {target}, levenshtein_distance({source}, {target}, {max_distance}))"
  },
  "LEVENSHTEIN_APPROX": {
    "sql_template": "similarity({source}, {target}, levenshtein_distance({source}, {target}, -1)) >= {threshold}",
    "similarity": "similarity({source}, {target}, levenshtein_distance({source}, {target}, -1))"
  },
  "LL_SOUNDEX": {
    "sql_template": "ll_soundex({source}) = ll_soundex({target}) AND similarity({source}, {target}, levenshtein_distance({source}, {target}, -1)) >= {threshold}",
    "similarity": "similarity({source}, {target}, levenshtein_distance({source}, {target}, -1))",
    "index_using": "btree (ll_soundex({target}))"
  },
  "BLOOTHOOFT_REDUCT": {
    "sql_template": "bloothooft({source}, {name_type}) = bloothooft({target}, {name_type}) AND similarity({source}, {target}, levenshtein_distance({source}, {target}, -1)) >= {threshold}",
    "similarity": "similarity({source}, {target}, levenshtein_distance({source}, {target}, -1))",
    "index_using": "btree (bloothooft({target}, {name_type}))"
  },
  "BLOOTHOOFT_REDUCT_APPROX": {
    "sql_template": "similarity(bloothooft({source}, {name_type}), bloothooft({target}, {name_type}), levenshtein_distance(bloothooft({source}, {name_type}), bloothooft({target}, {name_type}), -1)) >= {bloothooft_threshold} AND similarity({source}, {target}, levenshtein_distance({source}, {target}, -1)) >= {threshold}",
    "similarity": "similarity({source}, {target}, levenshtein_distance({source}, {target}, -1))"
  }
}